<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyApp.View.AddArt"
             xmlns:viewmodel="clr-namespace:MyApp.ViewModel"  
             Title="AddArt"
             xmlns:model="clr-namespace:MyApp.Model">
    <StackLayout Padding="20">
        <Label Text="Add Art" FontSize="Large" HorizontalOptions="Center" Margin="0,0,0,20"/>

        <Entry Placeholder="Title" Text="{Binding Title}" x:Name="TitleEntry" Margin="0,0,0,10"/>
        <Entry Placeholder="Artist" Text="{Binding Author}" x:Name="ArtistEntry" Margin="0,0,0,10"/>
        <Entry Placeholder="Year" Text="{Binding Date}" Keyboard="Numeric" x:Name="YearEntry" Margin="0,0,0,10"/>
        <Entry Placeholder="Description" Text="{Binding Description}" x:Name="MediumEntry" Margin="0,0,0,10"/>
        <Entry Placeholder="Picture" Text="{Binding Picture}" x:Name="DescriptionEntry" Margin="0,0,0,10"/>
        <Entry Placeholder="Price" Text="{Binding Price}" x:Name="PriceEntry" Margin="0,0,0,10"/>

        <Button Text="Submit" 
                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:AddArtViewModel}}, Path=OnSubmitClickedCommand}"
                HorizontalOptions="Center"/>
    </StackLayout>
</ContentPage>
